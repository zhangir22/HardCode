@model HardCodeProject.Models.CategoryViewModel

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "_Layout";
}

<h1>CreateCategory</h1>

@Html.ActionLink("Back To List Category", "IndexCategory",
         new { controller = "Main" },
         new { @class = "btn btn-primary" })

@Html.ActionLink("Back To List Product", "Index",
         new { controller = "Main" },
         new { @class = "btn btn-success" })
<hr />
<form method="post" action="CreateCategory" class="mt-5w">
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label id="Name" asp-for="Name" class="control-label">Name Category</label>
                <input name="Name" id="Name" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</form>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
